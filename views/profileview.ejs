<%- include header.ejs %>

<body>



<div class="container">
 <div ng-app="myApp" ng-controller="myCtrl">

  

	<div class="row">

		

		<div class="row-md-*">
		<div class="col-md-1" >
		</div>
 		<div class="col-md-3" >
		
			<div class="box box-primary">
            <div class="box-body box-profile">
              <img class="profile-user-img img-responsive img-circle" src=<%=view.image %> alt="User profile picture">

              <h3 class="profile-username text-center"><%= view.fname %> <%= view.lname %></h3>

              <p class="text-muted text-center"><%= view.designation %></p>

              <ul class="list-group list-group-unbordered">
                
                
              </ul>

              
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->

          <!-- About Me Box -->
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">About </h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">

              <p class="text-muted">
                <%= view.description %>
              </p>

              <hr>

              <strong><i class="fa fa-map-marker margin-r-5"></i> Address</strong>

              <p class="text-muted"><%= view.address %></p>

              <hr>

              
            </div>
            <!-- /.box-body -->
          </div>
		
		</div>

    	


		</div>
			<div class="col-md-2">
			</div>

           <div class="col-md-6">
            
			<div class="post">
                  
				  <form >
                 <div class="form-group">
                    <label for="exampleInputPassword1">Employee Number</label><br>
                    <label class="control-label" style="color: #336666">EMP <%= view.login_idlogin %></label><!--datadase connecting point--> 
                  </div>

                  <div class="form-group" style="margin-top: 20px;" >
                    <label for="exampleInputEmail1">Email address</label><br>
                    <label class="control-label" style="color: #336666"><%= view.username %></label> <!--datadase connecting point-->
                  </div>

                  <div class="form-group">
                    <label for="exampleInputPassword1">First Name</label><br>
                    <label class="control-label" style="color: #336666" ><%= view.fname %></label><!--datadase connecting point--> 
                  </div>
                  <div class="form-group">
                    <label for="exampleInputPassword1">Last Name</label><br>
                    <label class="control-label" style="color: #336666"><%= view.lname %></label><!--datadase connecting point--> 
                  </div>
                  <div class="form-group">
                    <label for="exampleInputPassword1">Gender</label><br>
                    <label class="control-label" style="color: #336666"><%= view.gender %></label><!--datadase connecting point--> 
                  </div>
                  <div class="form-group">
                    <label for="exampleInputPassword1">NIC Number</label><br>
                    <label class="control-label" style="color: #336666"><%= view.nic %></label><!--datadase connecting point--> 
                  </div>
                  <div class="form-group">
                    <label for="exampleInputPassword1">EPF Number</label><br>
                    <label class="control-label" style="color: #336666"><%= view.EPF %></label><!--datadase connecting point--> 
                  </div>
                  <div class="form-group">
                    <label for="exampleInputPassword1">Birth Day</label><br>
                    <label class="control-label" style="color: #336666"><%= view.birthday %></label><!--datadase connecting point--> 
                  </div>
                  <div class="form-group">
                    <label for="exampleInputPassword1">Address</label><br>
                    <label class="control-label" style="color: #336666"><%= view.address %></label><!--datadase connecting point--> 
                  </div>
                  
                </form>
				  
                </div>
			
        </div>

      </div>  


<!-- Calender Section -->

