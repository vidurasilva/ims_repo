        </div>
		<div class="col-md-3">
		<!-- Profile Image -->
          <div class="box box-primary">
            <div class="box-body box-profile">
				    <h3>Add New Supplier </h3>
                <div class="pannel">

                  <hr/>
                  <form action="/addsup" method="post">
                  <div class="form-group">
                    <label>Supplier Name</label>
                    <input type="text" class="form-control"  placeholder="Supplier" name="name">
                  </div>
                  <div class="form-group">
                    <label>Contact</label>
                    <input type="text" class="form-control"  placeholder="Contact Number" name="cont">
                  </div>
                  <div class="form-group">
                  <label>For Which store</label>
                  <select name="store" class="form-control">
                      <%      
                        if(store.length){ 
                        for(var i = 0;i < store.length;i++) { 
                      %>
                      <option value="<%=store[i].idstore%>" ><%=store[i].name%></option>
                      <%      
                        }
                      } 
                      %>
                  </select>
                  </div>
                  <div class="form-group">
                    <label>Description</label>
                    <textarea class="form-control"  rows="3" name="desc"></textarea>
                  </div>
                  <div class="form-group">
                    <button type="submit" class="btn btn-primary mb-2">Insert</button>
                  </div>
                  </form>


                </div>
            </div>
