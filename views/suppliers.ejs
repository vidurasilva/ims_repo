    <section class="content">

      <div class="row">
        
        <!-- /.col -->
		<div class="col-md-2">
		</div>
        <div class="col-md-7">
          <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
              <li class="active"><a href="#activity" data-toggle="tab">Suppliers</a></li>
              <li><a href="#timeline" data-toggle="tab">___</a></li>
            </ul>
            <div class="tab-content">
              <div class="active tab-pane" id="activity">
			       
				      <h3>Existing Suppliers</h3>
                  <table class="table table-hover">
                    <thead>
                    <tr>
                      <th></th>
                      <th>Name</th>
                      <th>Description</th>
                      <th>Contact Num</th>
                      <th> </th>
                    </tr>
                  </thead>
                  <tbody>
                    <% 
                      if(supplier.length){ 
                      for(var i = 0;i < supplier.length;i++) { 
                    %>
                    <tr >
                      <form class="success" action="/editsup" method="post">
                      <td><lable></lable></td>  
                      <td class="success"> <input  type="text" name="catname" class="form-control"  value="<%= supplier[i].name %>" > </td>
                      <td class="success"> <input  type="text" name="catdes" class="form-control"  value="<%= supplier[i].description %>" > </td>
                      <td class="success"> <input  type="text" name="catcon" class="form-control"  value="<%= supplier[i].contact %>" > </td>

                      <td>
                        <input type="hidden" name="catid" class="form-control"  value="<%= supplier[i].idsupplier %>">
                        <label><input type="checkbox" class="agree" id="<%= supplier[i].idsupplier + 'sup' %>" onclick="disableact('<%= supplier[i].name %>', '<%= supplier[i].idsupplier %>', 'sup')"> Edit <br/></label><button type="submit" class="btn btn-warning" id="<%= supplier[i].name + 'sup' %>" disabled>Save</button>
                      </td>

                      </form>

                    </tr>
                    <%
                        }
                      }
                    %>
                  <tbody>
                  </table>

               
