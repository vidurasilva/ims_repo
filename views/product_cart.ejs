<!-- Header End====================================================================== -->
<div id="mainBody">
	<div class="container">
	<div class="row">
<!-- Sidebar ================================================== -->
	<div class="col-xs-3"> 
	<div id="sidebar" class="span3">

		<div class="well well-small"><a id="myCart" href="/viewcart"><img src="/cssFilespro/images/ico-cart.png" alt="cart">My Cart <span class="badge badge-warning pull-right">Rs. <%=mycart.total %></span></a></div>


		<ul id="sideManu" class="nav nav-tabs nav-stacked">
			<li class="subMenu open"><a> Category</a>
				<ul>
				<%      
                if(category.length){ 
                for(var i = 0;i < category.length;i++) { 
              	%>
				<li>
				<form action="/prosearchside" method="post">
					<input type="hidden" name="name" value="category_idcategory">
					<input type="hidden" name="id" value="<%=category[i].idcategory %>">
					<button type="submit" class="active" style="background:none;padding:0;border:none;  border-bottom:1px solid;font: inherit;"><i class="icon-chevron-right"></i><%=category[i].name %> 
					</button>
				</form>
				</li>
				<%      
                }
            		} 
              	%>
				</ul>
			</li>
			<li class="subMenu"><a>Generic</a>
				<ul style="display:none">
				<%      
                if(generic.length){ 
                for(var i = 0;i < generic.length;i++) { 
              	%>
				<li>
				<form action="/prosearchside" method="post">
					<input type="hidden" name="name" value="generic_idgeneric">
					<input type="hidden" name="id" value="<%=generic[i].idgeneric %>">
					<button type="submit" class="active" style="background:none;padding:0;border:none;  border-bottom:1px solid;font: inherit;"><i class="icon-chevron-right"></i><%=generic[i].name %> 
					</button>
				</form>
				</li>
				<%      
                }
            		} 
              	%>													
			</ul>
			</li>
			<li class="subMenu"><a>Brand</a>
				<ul style="display:none">
				<%      
                if(brand.length){ 
                for(var i = 0;i < brand.length;i++) { 
              	%>
				<li>
				<form action="/prosearchside" method="post">
					<input type="hidden" name="name" value="brand_idbrand">
					<input type="hidden" name="id" value="<%=brand[i].idbrand %>">
					<button type="submit" class="active" style="background:none;padding:0;border:none;  border-bottom:1px solid;font: inherit;"><i class="icon-chevron-right"></i><%=brand[i].name %> 
					</button>
				</form>
				</li>
				<%      
                }
            		} 
              	%>													
			</ul>
			</li>
			
		</ul>
		<br/>
		  <div class="thumbnail">
			<img src="/cssFilespro/images/products/bosch0.jpg" alt="Excellance Bosch New tool"/>
			<div class="caption">
			  <h5>BOSCH</h5>
			</div>
		  </div><br/>
			<div class="thumbnail">
				<img src="/cssFilespro/images/products/hitachi.jpg" title="Bootshop New Kindel" alt="Bootshop Kindel">
				<div class="caption">
				  <h5>HITACHI</h5>
				</div>
			  </div><br/>
			  </div>
	</div>
<!-- Sidebar end=============================================== -->
	<div class="span9">
    <ul class="breadcrumb">
		<li><a href="/propage">Home</a> <span class="divider">/</span></li>
		<li class="active"> SHOPPING CART</li>
    </ul>
	<h3>  SHOPPING CART <a href="/propage" class="btn btn-large pull-right"><i class="icon-arrow-left"></i> Continue Shopping </a></h3>	
	<hr class="soft"/>
		
			
	<table class="table table-bordered">
              <thead>
                <tr>
                  <th>Product</th>
                  <th>Description</th>
                  <th>Quantity/Update</th>
				  <th>Price</th>
                  <th>Total</th>
                  <th></th>
                  
				</tr>
              </thead>
              <tbody>
              	<%      
                if(cartproducts.length){ 
                for(var i = 0;i < cartproducts.length;i++) { 
                	for(var j = 0;j < inventory.length;j++) { 
              			if(cartproducts[i].inventory_idinventory==inventory[j].idinventory){
                %>
                <tr>
                  <td> <img width="60" src="<%=inventory[j].imagelink1%>" alt=""/></td>
                  <td><%=inventory[j].name%><br/>- <%=inventory[j].itemcode%></td>
				  <td>
					<div class="input-append">
						<form action="/cartqty" method="post">
						<input type="hidden" value="<%=mycart.idcart%>" name="crtid">
						<input type="hidden" value="<%=mycart.total%>" name="crttot">
						<input type="hidden" value="<%=cartproducts[i].idcartproducts%>" name="proid">
						<input type="hidden" value="<%=cartproducts[i].qty%>" name="oldqty">
						<input type="hidden" value="<%=cartproducts[i].unit%>" name="price">
						<input class="span1" id="appendedInputButtons" size="16" type="number" value="<%=cartproducts[i].qty%>" name="newqty"><button class="btn btn-info" type="submit"><i class="material-icons"></i>change</button>
						</form>				
					</div>
				  </td>
                  <td>Rs. <%=cartproducts[i].unit%></td>
                  <td>Rs. <%=cartproducts[i].unit*cartproducts[i].qty%></td>
                  <td>
                  	<form action="/delfrmcart" method="post">
                  		<input type="hidden" value="<%=mycart.total %>" name="crttot">
                  		<input type="hidden" value="<%=cartproducts[i].cart_idcart%>" name="crtid">
                  		<input type="hidden" value="<%=cartproducts[i].idcartproducts%>" name="delid">
                  		<input type="hidden" value="<%=cartproducts[i].unit*cartproducts[i].qty%>" name="price">
                  		<button class="btn btn-warning" type="submit"><i class="material-icons"></i>Remove</button>
                  	</form>
                  </td>
                  
                </tr>
                <%
                  		}
                	}      
                  }
            	} 
              	%>	
                <tr>
                  <td colspan="6" style="text-align:right">Total Price:	</td>
                  <td> Rs. <%=mycart.total %> </td>
                </tr>
				 <tr>
                  <td colspan="6" style="text-align:right">Total Discount:	</td>
                  <td> Rs. 00.00</td>
                </tr>
				 <tr>
                  <td colspan="6" style="text-align:right"><strong>TOTAL =</strong></td>
                  <td class="label label-important" style="display:block"> <strong> Rs. <%=mycart.total %> </strong></td>
                </tr>
				</tbody>
            </table>
		
	<a href="/propage" class="btn btn-large"><i class="icon-arrow-left"></i> Continue Shopping </a>
	<%
	if(level == 'user'){
	%>
	<a href="/concart" class="btn btn-large pull-right">CONFIRM <i class="fa fa-thumbs-o-up" style="font-size:36px"></i></a>
	<%
	}
	%>
</div>
</div></div>
</div>
